<controls:ChildWindow
           xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
           xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
           xmlns:controls="clr-namespace:System.Windows.Controls;assembly=System.Windows.Controls"
           xmlns:telerik="http://schemas.telerik.com/2008/xaml/presentation" x:Class="MeetingScheduler.Views.SetTeam"
           Width="375" Height="121" 
           Title="Select your team?">
    <Grid x:Name="LayoutRoot" Margin="2,2,2,1">
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <telerik:RadButton x:Name="OKButton" telerik:StyleManager.Theme="Windows8Touch" Content="OK" Click="OKButton_Click" Width="75" Height="23" HorizontalAlignment="Right" Margin="0,41,0,0" VerticalAlignment="Top" />
        <telerik:Label Content="Select your team: " HorizontalAlignment="Left" Margin="10,0,0,0" VerticalAlignment="Top"/>
        <telerik:RadComboBox x:Name="TeamCB" telerik:StyleManager.Theme="Windows8Touch" HorizontalAlignment="Left" Margin="124,0,0,0" VerticalAlignment="Top" Width="229" Loaded="ComboBox_Loaded"/>
    </Grid>
</controls:ChildWindow>