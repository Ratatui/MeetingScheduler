<controls:ChildWindow
           xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
           xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
           xmlns:controls="clr-namespace:System.Windows.Controls;assembly=System.Windows.Controls"
           xmlns:telerik="http://schemas.telerik.com/2008/xaml/presentation" x:Class="MeetingScheduler.Views.SetTeam"
           Width="375" Height="111" 
           Title="SetTeam">
    <Grid x:Name="LayoutRoot" Margin="2,2,2,1">
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <Button x:Name="OKButton" Content="OK" Click="OKButton_Click" Width="75" Height="23" HorizontalAlignment="Right" Margin="0,12,0,0" Grid.Row="1" />
        <telerik:Label Content="Select your team: " HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top"/>
        <ComboBox x:Name="TeamCB" HorizontalAlignment="Left" Margin="129,12,0,0" VerticalAlignment="Top" Width="224" Loaded="ComboBox_Loaded"/>
    </Grid>
</controls:ChildWindow>